@model S8__Complet.Models.PredictionItem
@{
    ViewData["Title"] = "Prediction";
}
@Html.BeginForm("Prediction","Pred",FormMethod.Post)
{
<div class="container-fluid">
       <div class="row">
           <div class="col-md-4 ">
                   <h5>Choose your data</h5>
           </div>
            <div class="col-md-4 ml-auto">
                    <h5>Choose your models</h5>
                    <div class="form-check">                     
                        @Html.CheckBox("analytic", "false")
                        @Html.Label("analytic", "Analytical Method")
                    </div>

                    <div class="form-check">
                        <a data-toggle="modal" data-target=".bootstrapmodal">
                            @Html.CheckBox("logreg", "false")
                        </a>                        
                        @Html.Label("logreg", "Logistic Regression")
                    </div>

                    <div class="form-check">
                        @Html.CheckBox("knn","false")
                        @Html.Label("knn","KNN")
                    </div>
                    <div class="form-check">
                        @Html.CheckBox("randfor","false")
                        @Html.Label("randfor","Random Forest")
                    </div>
           </div>
       </div>
       <br />
       <br />
       <div class="row">
           <div class="col-12">
               <center>
                    <input class="btn btn-danger btn-block" style="background-color: #a30c0c" ID="Button2" value="Predict" />
               </center>
           </div>
       </div>
   </div>
   }

<div class="modal fade bootstrapmodal" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel">Modal 1</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Show a second modal and hide this one with the button below.
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">Open second modal</button>
            </div>
        </div>
    </div>
</div>
